extends layout


block content
    .users-list-wrapper
        h4 Список пользователей
        .control-panel.d-flex.w-75
            select.form-select.align-self-start#filter-select
                option(value="default") По умолчанию
                option(value="admin") Только администраторы
                option(value="active") Только активные
        table.table.table-hover.table-striped.table-bordered#users-table
            thead
                tr
                    th(scope='col') ID
                    th(scope='col') Имя пользователя
                    th(scope='col') Email
                    th(scope='col') ФИО
                    th(scope='col') Статус
                    th(scope='col') Роль
            tbody
